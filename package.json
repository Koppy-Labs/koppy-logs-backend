{
  "name": "@koppy-logs/backend",
  "module": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch run src/main.ts",
    "db:generate": "drizzle-kit generate --name",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:test": "bun --env-file=.env.test drizzle-kit migrate",
    "db:reset:test": "dropdb -h localhost -U postgres koppy_logs_test && createdb -h localhost -U postgres koppy_logs_test && bun --env-file=.env.test drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:test": "bun --env-file=.env.test drizzle-kit studio",
    "lint": "bun eslint --fix src --ext .ts",
    "test": "bun --env-file=.env.test vitest --watch"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/bun": "latest",
    "@types/ws": "^8.18.0",
    "drizzle-kit": "^0.30.5",
    "eslint": "8.57.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/websocket": "^11.0.2",
    "@libsql/client": "^0.14.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.40.0",
    "drizzle-zod": "^0.7.0",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "ioredis": "^5.6.0",
    "jose": "^6.0.10",
    "pg": "^8.14.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.2"
  }
}